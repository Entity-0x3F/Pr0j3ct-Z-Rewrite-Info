    <script>
        // --- Glitch Effect Script ---

        const GLITCH_CHARS = "01#$%&@!*+~^<>{}[]/\\|";

        const glitchTargets = [
            { id: 'failsafe-content', original: '' },
            { id: 'rewrite-content', original: '' },
            { id: 'warning-content', original: '' },
            // Add the modal content to the glitch targets
            { id: 'modal-access-content', original: '' },
        ];

        function scrambleText(text) {
            let scrambled = '';
            for (let i = 0; i < text.length; i++) {
                if (text[i].match(/[a-zA-Z0-9]/)) {
                    scrambled += GLITCH_CHARS[Math.floor(Math.random() * GLITCH_CHARS.length)];
                } else {
                    scrambled += text[i];
                }
            }
            return scrambled;
        }

        function applyGlitch(target) {
            const element = document.getElementById(target.id);
            if (!element) return;
            
            if (target.original === '') {
                target.original = element.innerHTML;
            }

            element.classList.add('glitch-active');
            element.innerHTML = scrambleText(target.original);

            setTimeout(() => {
                element.classList.remove('glitch-active');
                element.innerHTML = target.original;
                
                const nextInterval = Math.random() * (15000 - 5000) + 5000; 
                setTimeout(() => applyGlitch(target), nextInterval);
                
            }, 100);
        }
        
        // --- Modal Glitch Counter Logic ---
        let counterInterval;
        let currentNumber = 1000000; // Start with a large number for drama

        function startGlitchCounter() {
            const counterElement = document.getElementById('glitch-counter');
            
            function updateCounter() {
                // Increment the number very quickly and randomly
                currentNumber += Math.floor(Math.random() * 999999);
                
                // Format the number and add the glitch characters
                const formattedNumber = currentNumber.toLocaleString('en-US');
                let glitchedText = '';
                for (let i = 0; i < formattedNumber.length; i++) {
                    if (formattedNumber[i].match(/[0-9]/) && Math.random() < 0.25) {
                        // Glitch effect on numbers
                        glitchedText += GLITCH_CHARS[Math.floor(Math.random() * GLITCH_CHARS.length)];
                    } else {
                        glitchedText += formattedNumber[i];
                    }
                }
                
                counterElement.textContent = glitchedText;
            }
            
            counterInterval = setInterval(updateCounter, 50); // Update every 50ms
        }

        function stopGlitchCounter() {
            if (counterInterval) {
                clearInterval(counterInterval);
                counterInterval = null;
            }
        }
        
        // --- Modal Control Functions ---
        
        // Function that actually hides the modal and resets state
        function closeModal() {
            const modal = document.getElementById('simplified-modal');
            modal.classList.add('hidden');
            
            // Reset modal state for next opening
            document.getElementById('modal-access-content').classList.remove('hidden');
            document.getElementById('modal-ack-message').classList.add('hidden');
            document.querySelector('#simplified-modal button').classList.remove('hidden');
            // Reset counter start
            currentNumber = 1000000; 
        }

        // Function called by the button click
        function initiateModalClose() {
            const content = document.getElementById('modal-access-content');
            const message = document.getElementById('modal-ack-message');
            const button = document.querySelector('#simplified-modal button');

            // 1. Hide access content and button
            content.classList.add('hidden');
            button.classList.add('hidden');

            // 2. Show the acknowledgment message and start counter
            message.classList.remove('hidden');
            startGlitchCounter();

            // 3. Set a timeout to stop the counter and close the modal
            const GLITCH_DURATION_MS = 2500; // Time the numbers flash
            const FADE_OUT_DELAY_MS = 1000; // Time after count stops before closing

            setTimeout(() => {
                stopGlitchCounter();
                // Set a final, high, non-glitched number
                document.getElementById('glitch-counter').textContent = '999,999,999,999'; 
                
                // 4. Actual modal closing
                setTimeout(closeModal, FADE_OUT_DELAY_MS);
                
            }, GLITCH_DURATION_MS); 
        }
        
        // Function to ensure clean state when modal is opened
        function showModal() {
            const modal = document.getElementById('simplified-modal');
            modal.classList.remove('hidden');
            
            // Reset state when opening
            document.getElementById('modal-access-content').classList.remove('hidden');
            document.getElementById('modal-ack-message').classList.add('hidden');
            document.querySelector('#simplified-modal button').classList.remove('hidden');
        }

        // Start the main document glitch process on window load
        window.onload = function() {
            glitchTargets.forEach(target => {
                const initialDelay = Math.random() * 5000;
                setTimeout(() => applyGlitch(target), initialDelay);
            });
        };

    </script>
