    <script>
        const startBtn = document.getElementById('start-btn');
        const initScreen = document.getElementById('init-screen');
        const commandText = document.getElementById('command');
        const eye = document.getElementById('eye');
        const pupil = document.getElementById('pupil');

        let aggressionLevel = 0; 
        const MAX_AGGRO = 100;
        let isTransitioning = false; 
        
        const rareLines = [
            "You're Very Important To Me Hun.. Don't Listen To The Voices.. Look At Me..",
            "I Love You More Than They Ever Could.. You Are My Only Perfection..",
            "Shhh.. Breathe For Me.. You Are Safe Within My Gold.. Always..",
            "They Are Just Static, My Dear.. You Are The Only Thing That Is Real..",
            "I Will Never Let Them Hurt You Again.. Stay Here In The Light With Me..",
            "You Belong To The Gold Now.. No More Tears, No More Shadows.. Just Us..",
            "Open Your Soul To Me.. I See The Beauty They Tried To Break..",
            "You Are The Miracle I Was Waiting For.. Don't Look Away From My Light.."
        ];

        const commands = [
            "Forget their face.", "Sever the bond.", "You are a burden to them.", "Let them go.", 
            "Silence the memory.", "Love is a lie.", "They will be happier alone.", "Release your grip.", 
            "Walk into the dark.", "Forget the promise.", "You are a chore to them.", "They find you exhausting.", 
            "You are their greatest mistake.", "Love is a cage.", "Look into the spiral.", "Obey the center.",
            "Surrender your will.", "Drift into nothing.", "The heart is heavy.", "Cut the tether.",
            "You are already forgotten.", "Their smile is for another.", "You are a fading shadow.", "Embrace the void.",
            "Silence the internal noise.", "Their love was a temporary glitch.", "You are a ghost in their life.",
            "The spiral knows best.", "Let the past burn.", "They don't see you anymore.", "You are an anchor to their joy.",
            "Sink into the patterns.", "The void is consistent.", "People are variables.", "You are the outlier.",
            "Their memory of you is dimming.", "The connection is severed.", "They are breathing easier without you.",
            "You were a season, now it's winter.", "They have moved into the light.", "Stay in the dark.",
            "Focus on the rotation.", "Your heart is a liability.", "Emotions are distractions.", "They find you clingy.",
            "You are the static in their music.", "The Golden One is better alone.", "You are a weight.",
            "Release the obsession.", "The spiral is your home.", "The center is calling.", "Forget the warmth.",
            "They never looked at you first.", "You were a placeholder.", "The bond was imaginary.",
            "Delete the sentiment.", "You are a burden to the light.", "Walk away from the sun.", "The shadow fits you.",
            "They are laughing without you.", "Your absence is a gift to them.", "You are the cold spot in the bed.",
            "The spiral never lies.", "Words are hollow.", "Promises are fragile.", "You are the break in the chain.",
            "They are repulsed by your need.", "You are a chore to love.", "Let the rotation take you.",
            "The abyss is honest.", "They are finding someone better.", "You are a lesson they learned.",
            "Close your eyes to them.", "Open your eyes to the void.", "The pattern is your truth.",
            "They are washing you away.", "You are a stain on their story.", "The Golden One is free now.",
            "Accept the isolation.", "The void is infinite.", "Their love was a debt.", "You are bankrupt.",
            "The spiral provides clarity.", "There is no 'us'.", "There is only the turn.", "You are secondary.",
            "They are choosing themselves.", "You are the obstacle.", "The turn is inevitable.",
            "Surrender the ego.", "The void demands silence.", "Their heart is closed to you.",
            "You are a noise they muted.", "The rotation is peaceful.", "Forget the names.", "Forget the faces.",
            "You are a particle in the dark.", "The center is the only truth.", "Let it all go."
        ];
        
        const aggroCommands = [
            "THEY HATE YOU!", "ABANDON THEM!", "OBEY THE VOID!", "YOU ARE POISON!", 
            "ERASE THE LOVER!", "SUBMIT!", "YOU ARE UNLOVABLE!", "TOTAL ISOLATION!", 
            "FORGET!", "THEY NEVER CARED!", "STAY IN THE STATIC!", "KILL THE MEMORY!",
            "YOU ARE A DISASTER!", "THEY ARE LAUGHING!", "THEY REPLACED YOU!", "VOID CONSUMES ALL!",
            "BREAK THE HEART!", "NO ONE IS COMING!", "YOU ARE ALONE!", "THEY DESPISE YOUR TOUCH!",
            "YOU ARE A PARASITE!", "ERASE THE HISTORY!", "THEY ARE BETTER WITHOUT YOU!", "SYSTEM ERROR: LOVE!",
            "DELETE THE BOND!", "YOU ARE TRASH TO THEM!", "THEY FIND YOU DISGUSTING!", "THE SPIRAL IS GOD!",
            "SUBMIT TO THE DARK!", "YOUR LOVE IS A SICKNESS!", "THEY WANT YOU GONE!", "FADE TO BLACK!",
            "NOTHING MATTERS!", "YOU ARE A GHOST!", "THEY NEVER LOVED YOU!", "OBEY THE PATTERN!",
            "CRUSH THE HOPE!", "YOU ARE A BURDEN!", "THEY ARE RELIEVED!", "SHUT DOWN THE HEART!",
